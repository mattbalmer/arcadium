{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist/",
        "baseUrl": "./source/",
        "lib": ["es2023", "dom"],
        "jsx": "react-jsx",
        "paths": {
            "@client/*": ["./@client/*"],
        }
    },
    "include": [
        "./source/**/*",
        "../shared/@shared/types/defs"
    ]
}